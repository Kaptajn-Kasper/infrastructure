# ============================================
# Infrastructure Setup Configuration
# ============================================
# Copy to .env and customize before running setup.sh
#
# Usage:
#   cp .env.template .env
#   nano .env  # customize values
#   sudo ./setup.sh

# ============================================
# SSH Configuration
# ============================================

# Custom SSH port (1024-65535)
# Using a non-standard port reduces automated attack surface
SSH_PORT=22022

# ============================================
# User Accounts
# ============================================

# Operator account - daily admin user with full sudo access
# This replaces root for daily operations
OPERATOR_USER=operator

# GitHub Actions deployment user - limited sudo (docker + systemctl only)
# Used for CI/CD deployments
GH_ACTIONS_USER=gh-actions

# ============================================
# Optional Components (true/false)
# ============================================
# Set to 'false' to skip installation

# Docker Engine + Docker Compose plugin
INSTALL_DOCKER=true

# Caddy reverse proxy (automatic HTTPS)
INSTALL_CADDY=true

# Automatic security updates via unattended-upgrades
INSTALL_UNATTENDED_UPGRADES=true

# Create /opt/apps directory structure for applications
CREATE_APP_DIRECTORY=true

# ============================================
# System Configuration
# ============================================

# Auto-configure swap based on available RAM
# - RAM <= 2GB: swap = RAM
# - RAM <= 8GB: swap = RAM / 2
# - RAM > 8GB:  swap = 4GB
CONFIGURE_SWAP=true

# Set system timezone to UTC
CONFIGURE_TIMEZONE=true

# Set server hostname (leave empty to skip)
# Must be a valid hostname (alphanumeric and hyphens only)
SERVER_HOSTNAME=

# ============================================
# Advanced Options
# ============================================

# Auto-reboot after unattended-upgrades if required (true/false)
# Only applies if INSTALL_UNATTENDED_UPGRADES=true
AUTO_REBOOT=false

# Auto-reboot time (24h format, e.g., "02:00")
# Only applies if AUTO_REBOOT=true
AUTO_REBOOT_TIME=02:00
